{% extends 'base.jinja2' %}

{% block subtitle %}Donations for Charlie{% endblock subtitle %}

{% block content %}
<ul>
    {% for donation in donations %}
    {% if donation.donor.name == 'Charlie' %}
        <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
    {% endif %}
    {% endfor %}
</ul>
{% endblock content %}
